<Window x:Class="Compression_UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Compression Pipeline Settings"
        Height="550" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="12" CornerRadius="5" Margin="0,0,0,15">
            <TextBlock Text="Configure Compression Pipeline"
                      FontSize="18"
                      FontWeight="Bold"
                      Foreground="White"
                      HorizontalAlignment="Center"/>
        </Border>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="5">
                <TextBlock Text="Pipeline Processors" FontWeight="Bold" Margin="0,0,0,10" FontSize="14"/>

                <!-- Phase 1: Preprocessing -->
                <Border Background="#ECF0F1" Padding="10" CornerRadius="5" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Phase 1: Preprocessing" FontWeight="SemiBold" FontSize="12" Foreground="#2C3E50" Margin="0,0,0,8"/>
                        <CheckBox Name="DiacriticsCheckBox" Content="Diacritics Normalization" IsChecked="True" Margin="0,0,0,5"/>
                        <TextBlock Text="Converts to lowercase and normalizes Romanian diacritics (ă, â, î, ș, ț)"
                                  FontSize="10" Foreground="#7F8C8D" Margin="20,0,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Phase 2: Semantic Compression -->
                <Border Background="#ECF0F1" Padding="10" CornerRadius="5" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Phase 2: Semantic Compression" FontWeight="SemiBold" FontSize="12" Foreground="#2C3E50" Margin="0,0,0,8"/>

                        <CheckBox Name="StopwordsCheckBox" Content="Stopwords Removal (~218 words)" IsChecked="True" Margin="0,0,0,5"/>
                        <TextBlock Text="Removes common Romanian stopwords (pronouns, articles, prepositions, etc.)"
                                  FontSize="10" Foreground="#7F8C8D" Margin="20,0,0,5" TextWrapping="Wrap"/>

                        <CheckBox Name="SynonymsCheckBox" Content="Synonym Replacement (21 groups)" IsChecked="True" Margin="0,5,0,5"/>
                        <TextBlock Text="Replaces synonyms with representative forms to reduce vocabulary"
                                  FontSize="10" Foreground="#7F8C8D" Margin="20,0,0,10" TextWrapping="Wrap"/>

                        <TextBlock Text="Word Reduction Method:" FontSize="11" FontWeight="SemiBold" Margin="0,5,0,5"/>
                        <RadioButton Name="NoReductionRadio" GroupName="WordReduction" Content="None (keep original forms)" Margin="0,0,0,5"/>
                        <RadioButton Name="StemmingRadio" GroupName="WordReduction" Content="Stemming (rule-based suffix removal)" Margin="0,0,0,5"/>
                        <RadioButton Name="LemmatizationRadio" GroupName="WordReduction" Content="Lemmatization (dictionary-based, 165 rules)" IsChecked="True" Margin="0,0,0,5"/>
                        <TextBlock Text="Stemming: Fast, aggressive suffix removal | Lemmatization: Accurate, vocabulary-based"
                                  FontSize="10" Foreground="#7F8C8D" Margin="20,0,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Advanced Options -->
                <Border Background="#FEF5E7" BorderBrush="#F39C12" BorderThickness="2" Padding="10" CornerRadius="5" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Advanced Compression" FontWeight="SemiBold" FontSize="12" Foreground="#E67E22" Margin="0,0,0,8"/>

                        <CheckBox Name="AggressiveModeCheckBox" Content="Aggressive Mode (keep only nouns/verbs)" Margin="0,0,0,5"/>
                        <TextBlock Text="⚠️ Very aggressive: removes adjectives, adverbs, and function words"
                                  FontSize="10" Foreground="#E67E22" Margin="20,0,0,5" TextWrapping="Wrap"/>

                        <CheckBox Name="ArithmeticCodingCheckBox" Content="Arithmetic Coding (statistical compression)" Margin="0,5,0,5"/>
                        <TextBlock Text="Statistical entropy-based compression using frequency analysis"
                                  FontSize="10" Foreground="#E67E22" Margin="20,0,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Mode Settings -->
                <Border Background="White" BorderBrush="#BDC3C7" BorderThickness="2" Padding="10" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Compression Mode" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,10"/>

                        <CheckBox Name="LossyModeCheckBox" Content="Lossy Mode (no reversibility)" Margin="0,0,0,5"/>
                        <TextBlock Text="⚠️ Skips metadata storage - cannot decompress back to original"
                                  FontSize="10" Foreground="#E74C3C" Margin="20,0,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Name="ResetButton" Content="Reset to Defaults" Click="ResetButton_Click"
                   Padding="15,8" Margin="5" Background="#95A5A6" Foreground="White"/>
            <Button Name="SaveButton" Content="Save &amp; Close" Click="SaveButton_Click"
                   Padding="15,8" Margin="5" Background="#27AE60" Foreground="White"/>
            <Button Name="CancelButton" Content="Cancel" Click="CancelButton_Click"
                   Padding="15,8" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
