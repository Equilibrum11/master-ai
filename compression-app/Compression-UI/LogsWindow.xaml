<Window x:Class="Compression_UI.LogsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Compression Full Logs"
        Height="700" Width="1000"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="12" CornerRadius="5" Margin="0,0,0,15">
            <TextBlock Text="Compression Processing Logs - Detailed View"
                      FontSize="18"
                      FontWeight="Bold"
                      Foreground="White"
                      HorizontalAlignment="Center"/>
        </Border>

        <!-- Logs Content -->
        <Border Grid.Row="1" BorderBrush="#BDC3C7" BorderThickness="2" CornerRadius="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <TextBox Name="LogsTextBox"
                        TextWrapping="NoWrap"
                        IsReadOnly="True"
                        FontFamily="Consolas"
                        FontSize="11"
                        Background="#FAFAFA"
                        BorderThickness="0"
                        Padding="10"
                        AcceptsReturn="True"/>
            </ScrollViewer>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Name="CopyLogsButton" Content="ðŸ“‹ Copy All Logs" Click="CopyLogsButton_Click"
                   Padding="15,8" Margin="5"/>
            <Button Name="SaveLogsButton" Content="ðŸ’¾ Save Logs to File" Click="SaveLogsButton_Click"
                   Padding="15,8" Margin="5"/>
            <Button Name="CloseButton" Content="Close" Click="CloseButton_Click"
                   Padding="15,8" Margin="5" Background="#95A5A6" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
