<Window x:Class="Compression_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Compression_UI"
        mc:Ignorable="d"
        Title="Romanian Text Compression - Visual Tester"
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2.5*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15" CornerRadius="5" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Romanian Text Compression Tool"
                          FontSize="24"
                          FontWeight="Bold"
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Compression Tester - Interactive Visual Tool"
                          FontSize="14"
                          Foreground="#ECF0F1"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Input Section -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="INPUT TEXT (Romanian)"
                      FontSize="16" FontWeight="Bold"
                      Foreground="#2C3E50" Margin="0,0,0,5"/>

            <Border Grid.Row="1" BorderBrush="#BDC3C7" BorderThickness="2" CornerRadius="5">
                <TextBox Name="InputTextBox"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Auto"
                        Text="Copiii mergeau foarte repede spre casele lor frumoase.&#x0a;Ei aveau multe jucării și cărți interesante.&#x0a;Toți copiii erau foarte fericiți și veseli când mergeau acasă."/>
            </Border>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                <Button Name="LoadFileButton" Content="📁 Load File" Click="LoadFileButton_Click"/>
                <Button Name="ClearInputButton" Content="🗑️ Clear" Click="ClearInputButton_Click"/>
                <TextBlock VerticalAlignment="Center" Margin="20,0,0,0">
                    <Run Text="Characters: "/>
                    <Run Name="InputCharCount" Text="0" FontWeight="Bold"/>
                    <Run Text=" | Words: "/>
                    <Run Name="InputWordCount" Text="0" FontWeight="Bold"/>
                </TextBlock>
            </StackPanel>
        </Grid>

        <!-- Control Panel -->
        <Border Grid.Row="2" Background="#ECF0F1" Padding="15" CornerRadius="5" Margin="0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Settings -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <Button Name="SettingsButton"
                           Content="⚙️ Pipeline Settings"
                           Background="#34495E"
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="14"
                           Padding="20,12"
                           Click="SettingsButton_Click"
                           HorizontalAlignment="Left"/>
                    <TextBlock Name="SettingsSummary"
                              Text="All processors enabled"
                              FontSize="11"
                              Foreground="#7F8C8D"
                              Margin="0,8,0,0"
                              TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Center: Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="20,0">
                    <Button Name="CompressButton"
                           Content="⬇️ COMPRESS"
                           Background="#27AE60"
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="16"
                           Padding="30,15"
                           Click="CompressButton_Click"/>
                    <Button Name="DecompressButton"
                           Content="⬆️ DECOMPRESS"
                           Background="#3498DB"
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="16"
                           Padding="30,15"
                           Click="DecompressButton_Click"/>
                </StackPanel>

                <!-- Right: Statistics -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Statistics" FontWeight="Bold" Margin="0,0,0,10"/>
                    <StackPanel>
                        <TextBlock>
                            <Run Text="Compression Ratio: "/>
                            <Run Name="CompressionRatio" Text="--" FontWeight="Bold" Foreground="#27AE60"/>
                        </TextBlock>
                        <TextBlock Margin="0,5,0,0">
                            <Run Text="Space Savings: "/>
                            <Run Name="SpaceSavings" Text="--" FontWeight="Bold" Foreground="#E74C3C"/>
                        </TextBlock>
                        <TextBlock Margin="0,5,0,0">
                            <Run Text="Words Removed: "/>
                            <Run Name="WordsRemoved" Text="--" FontWeight="Bold"/>
                        </TextBlock>
                        <TextBlock Margin="0,5,0,0" Name="BinaryStatsText" Visibility="Collapsed">
                            <Run Text="Binary Size: "/>
                            <Run Name="BinarySize" Text="--" FontWeight="Bold" Foreground="#3498DB"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Output Section -->
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <TextBlock Text="OUTPUT TEXT"
                          FontSize="16" FontWeight="Bold"
                          Foreground="#2C3E50" Margin="0,0,10,5"/>
                <Border Name="StatusBadge"
                       Background="#95A5A6"
                       Padding="8,3"
                       CornerRadius="3"
                       Visibility="Collapsed">
                    <TextBlock Name="StatusText"
                              Text="Ready"
                              Foreground="White"
                              FontSize="11"
                              FontWeight="Bold"/>
                </Border>
            </StackPanel>

            <Border Grid.Row="1" BorderBrush="#BDC3C7" BorderThickness="2" CornerRadius="5">
                <TextBox Name="OutputTextBox"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Auto"
                        IsReadOnly="True"
                        Background="#FAFAFA"/>
            </Border>

            <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Name="CopyOutputButton" Content="📋 Copy Output" Click="CopyOutputButton_Click"/>
                    <Button Name="SaveFileButton" Content="💾 Save to File" Click="SaveFileButton_Click"/>
                    <Button Name="VerifyReversibilityButton" Content="✓ Verify Reversibility"
                           Click="VerifyReversibilityButton_Click"
                           Background="#9B59B6" Foreground="White"/>
                    <Button Name="ViewLogsButton" Content="📄 See Full Logs"
                           Click="ViewLogsButton_Click"
                           Background="#34495E" Foreground="White"/>
                    <TextBlock VerticalAlignment="Center" Margin="20,0,0,0">
                        <Run Text="Characters: "/>
                        <Run Name="OutputCharCount" Text="0" FontWeight="Bold"/>
                        <Run Text=" | Words: "/>
                        <Run Name="OutputWordCount" Text="0" FontWeight="Bold"/>
                    </TextBlock>
                </StackPanel>

                <!-- Step-by-Step Visualization -->
                <Expander Name="StepByStepExpander"
                         Header="🔍 Step-by-Step Processing Visualization"
                         Margin="0,10,0,0"
                         IsExpanded="False">
                    <Border BorderBrush="#BDC3C7" BorderThickness="1" Padding="10" Background="White" CornerRadius="5">
                        <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                            <StackPanel Name="StepsPanel">
                                <TextBlock Text="Run compression to see step-by-step transformations..."
                                          FontStyle="Italic"
                                          Foreground="#95A5A6"
                                          Margin="10"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Expander>
            </StackPanel>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="4" Background="#34495E" Padding="10" CornerRadius="5" Margin="0,10,0,0">
            <TextBlock Name="StatusBarText"
                      Text="Ready. Load or type Romanian text to begin compression testing."
                      Foreground="White"
                      FontSize="12"/>
        </Border>
    </Grid>
</Window>
